				rs = enviaConsultaSeccion.executeQuery();
				
			} else if(seccion.equals("Todos") && !pais.equals("Todos")){

			} else if(!seccion.equals("Todos") && !pais.equals("Todos")){

			}

//			conecta.close();
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return rs;
		
	}
	
	private Conexion miConexion;
	private ResultSet rs;
